@page
@model SteveGLotto.Pages.EuroDrawNumbersPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>euro lottery draw numbers</h2>
<br />
<p>
    <a class="btn btn-success" asp-page="Create">create euro lottery draw number</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EuroDrawNumbers[0].EuroNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EuroDrawNumbers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EuroNumber)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.EuroNumberID">edit</a>
                @*<a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.EuroNumberID">details</a>*@
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.EuroNumberID">delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
